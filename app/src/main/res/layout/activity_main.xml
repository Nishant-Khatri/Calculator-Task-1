<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/result_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/allbuttons"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="0"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="64dp" />

        <TextView
            android:id="@+id/solution_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/result_tv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="32dp" />

        <LinearLayout
            android:layout_alignParentBottom="true"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"

         android:id="@+id/allbuttons">


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:id="@+id/buttonsrow1">

             <com.google.android.material.button.MaterialButton
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 app:cornerRadius="36dp"
                 style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                 android:id="@+id/buttonC"
                 android:layout_weight="1"
                 android:text="C"
                 android:backgroundTint="#E2F13131"
                 android:textColor="#FAF0E6"
                 android:textSize="32dp"
                 android:layout_margin="14dp"
                 />

             <com.google.android.material.button.MaterialButton
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 app:cornerRadius="36dp"

                 style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                 android:id="@+id/buttonopenbracket"
                 android:text="("
                 android:backgroundTint="#1cc9a3"
                 android:layout_weight="1"
                 android:textColor="@color/white"
                 android:textSize="32dp"
                 android:layout_margin="14dp"
                 />

             <com.google.android.material.button.MaterialButton
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 app:cornerRadius="36dp"
                 android:layout_weight="1"
                 android:backgroundTint="#1cc9a3"
                 style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                 android:id="@+id/buttonclosebracket"
                 android:text=")"
                 android:textColor="@color/white"
                 android:textSize="32dp"
                 android:layout_margin="14dp"
                 />

             <com.google.android.material.button.MaterialButton
                 android:layout_width="72dp"
                 android:layout_height="72dp"
                 app:cornerRadius="36dp"
                 android:backgroundTint="#FF9800"
                 style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                 android:id="@+id/buttondevide"
                 android:text="/"
                 android:textColor="@color/white"
                 android:textSize="32dp"
                 android:layout_weight="1"
                 android:layout_margin="14dp"
                 />
         </LinearLayout>


         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/buttonsrow2">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:layout_weight="1"

                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:id="@+id/button7"
                    android:text="7"
                    android:backgroundTint="#1cc9a3"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:layout_margin="14dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:id="@+id/button8"
                    android:text="8"
                    android:backgroundTint="#1cc9a3"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:layout_margin="14dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:id="@+id/button9"
                    android:text="9"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:backgroundTint="#1cc9a3"
                    android:layout_margin="14dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_weight="1"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:id="@+id/buttonmultiply"
                    android:text="*"
                    android:backgroundTint="#FF9800"
                    android:textColor="@color/white"
                    android:textSize="28dp"
                    android:layout_margin="14dp"
                    />

            </LinearLayout>


         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/buttonsrow3">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:id="@+id/button4"
                    android:text="4"
                    android:backgroundTint="#1cc9a3"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:layout_margin="14dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:id="@+id/button5"
                    android:text="5"
                    android:backgroundTint="#1cc9a3"
                    android:layout_weight="1"

                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:layout_margin="14dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:id="@+id/button6"
                    android:text="6"
                    android:layout_weight="1"
                    android:backgroundTint="#1cc9a3"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:layout_margin="14dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:id="@+id/buttonplus"
                    android:backgroundTint="#FF9800"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:layout_weight="1"
                    android:layout_margin="14dp"
                    />

            </LinearLayout>


         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/buttonsrow4">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:id="@+id/button1"
                    android:text="1"
                    android:layout_weight="1"
                    android:backgroundTint="#1cc9a3"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:layout_margin="14dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:backgroundTint="#1cc9a3"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:id="@+id/button2"
                    android:text="2"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:layout_margin="14dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:id="@+id/button3"
                    android:layout_weight="1"
                    android:text="3"
                    android:backgroundTint="#1cc9a3"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:layout_margin="14dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:id="@+id/buttonsubtract"
                    android:layout_weight="1"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:backgroundTint="#FF9800"
                    android:layout_margin="14dp"
                    />

            </LinearLayout>


         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/buttonsrow5">

             <com.google.android.material.button.MaterialButton
                 android:id="@+id/buttonAC"
                 style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                 android:layout_width="79dp"
                 android:layout_height="72dp"
                 android:layout_marginLeft="14dp"
                 android:layout_marginTop="14dp"
                 android:layout_marginRight="8dp"
                 android:layout_marginBottom="14dp"
                 android:backgroundTint="#E2F13131"
                 android:text="AC"
                 android:textColor="@color/white"
                 android:textSize="20dp"
                 app:cornerRadius="36dp" />

             <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:id="@+id/button0"
                    android:backgroundTint="#1cc9a3"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:layout_margin="14dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:id="@+id/buttonDot"
                    android:backgroundTint="#1cc9a3"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:layout_margin="14dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cornerRadius="36dp"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:id="@+id/buttonequals"
                    android:text="="
                    android:backgroundTint="#8BC34A"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:layout_margin="14dp"
                    />

            </LinearLayout>


     </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>